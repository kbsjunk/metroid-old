<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://earth.google.com/kml/2.2">
	<Document>
		<name>Metroid KML</name>
		<description>Metroid KML</description>
{% for line in lines %}
		<Style id="line_{{ line.id }}">
			<LineStyle>
				<color>cc{{ line.color_kml }}</color>
				<width>6</width>
			</LineStyle>
		</Style>
{% endfor %}
		<Style id="icon_train">
			<IconStyle>
				<scale>0.4</scale>
				<Icon>
					<href>http://kitbs.com/temp/train-32.png</href>
				</Icon>
			</IconStyle>
		</Style>
		<Style id="icon_subway">
			<IconStyle>
				<scale>0.4</scale>
				<Icon>
					<href>http://kitbs.com/temp/subway-32.png</href>
				</Icon>
			</IconStyle>
		</Style>
		<Style id="icon_metro">
			<IconStyle>
				<scale>0.4</scale>
				<Icon>
					<href>http://kitbs.com/temp/metro-32.png</href>
				</Icon>
			</IconStyle>
		</Style>

{% for line in lines %}
{% for shape in line.shapes %}
		<Placemark id="line_{{ line.id }}_shape_{{ shape.id }}">
			<name>{{ line.name }}</name>
			<styleUrl>#line_{{ line.id }}</styleUrl>
			<LineString>
				<altitudeMode>absolute</altitudeMode>
				<coordinates>
				{% for point in shape.points %}
	{{ point.x }},{{ point.y }},0.0
				{% endfor %}
</coordinates>
			</LineString>
		</Placemark>
{% endfor %}
{% endfor %}

{% for stop in stops %}
		<Placemark id="stop_{{ stop.id }}">
			<name>{{ stop.name }}{{ stop.subname(false) }}</name>
			<styleUrl>#icon_{{ stop.city ? 'train' : 'metro' }}</styleUrl>
			<Point>
				<extrude>0</extrude>
				<altitudeMode>clampToGround</altitudeMode>
				<coordinates>{{ stop.pos.x }},{{ stop.pos.y }},0.0</coordinates>
			</Point>
		</Placemark>
{% endfor %}

	</Document>
</kml>